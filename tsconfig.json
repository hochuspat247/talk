{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@api/*": ["api/*"],
      "@assets/*": ["../assets/*"],
      "@utils/*": ["utils/*"], // Добавлено для src/utils/
      "@types/*": ["types/*"], // Добавлено для src/types/
      "@hooks/*": ["hooks/*"],
      "@mocks/*": ["mocks/*"]
    }
  }
}